<%- content_for :head do-%>
<title>管理画面 | <%= @current_business.business_stable.name %> | カテゴリ(<%= CategoryType.find_by(value: @category.type).name %>) | 新規作成</title>
<%- end -%>
<div class="row">
  <div class="col s12 m10 offset-m1 l10 offset-l1">
    <div class="card">
      <%- if @category.instance_of?(ArticleCategory) -%>
      <%= form_for(@category, url: admin_business_article_categories_path, method: :post) do |f| %>
        <div class="card-content">
          <span class="card-title black-text">
            <%= @current_business.business_stable.name %>&nbsp;カテゴリ(<%= CategoryType.find_by(value: @category.type).name %>)&nbsp;新規作成
          </span>
          <%= render "registration", f: f %>
        </div>
        <div class="card-action center-align">
          <%= f.button '作成する', class: 'waves-effect waves-light btn white-text wine-red', data: { confirm: '作成してもよろしいですか?' } %>
        </div>
      <% end %>
      <%- elsif @category.instance_of?(FixedCategory) -%>
      <%= form_for(@category, url: admin_business_fixed_categories_path, method: :post) do |f| %>
        <div class="card-content">
          <span class="card-title black-text">
            <%= @current_business.business_stable.name %>&nbsp;カテゴリ&nbsp;新規作成
          </span>
          <%= render "registration", f: f %>
        </div>
        <div class="card-action center-align">
          <%= f.button '作成する', class: 'waves-effect waves-light btn white-text wine-red', data: { confirm: '作成してもよろしいですか?' } %>
        </div>
      <% end %>
      <%- elsif @category.instance_of?(ServiceCategory) -%>
      <%= form_for(@category, url: admin_business_service_categories_path, method: :post) do |f| %>
        <div class="card-content">
          <span class="card-title black-text">
            <%= @current_business.business_stable.name %>&nbsp;カテゴリ&nbsp;新規作成
          </span>
          <%= render "registration", f: f %>
        </div>
        <div class="card-action center-align">
          <%= f.button '作成する', class: 'waves-effect waves-light btn white-text wine-red', data: { confirm: '作成してもよろしいですか?' } %>
        </div>
      <% end %>
      <%- end -%>
    </div>
  </div>
</div>
